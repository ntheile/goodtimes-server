{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch via NPM",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run-script",
        "start",
        "--nolazy"
      ],
      "port": 9229,
      "timeout": 1000000,
      "outFiles": [
        "${workspaceRoot}//**.js"
      ]
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach",
      "restart": true,
      "port": 9229,
      "timeout": 1000000
    },
    {
      "type": "node",
      "request": "launch",
      "name": "yarn start",
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": "yarn",
      "runtimeArgs": [
        "start"
      ],
      "stopOnEntry": false
    }
  ]
}